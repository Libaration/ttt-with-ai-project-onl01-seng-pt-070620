#!/usr/bin/env ruby

require_relative '../config/environment'
require 'colorize'
def start
puts 'How many players? (0,1 or 2)'.green
response = gets.strip!.to_i
case response
when 0
  game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new)
  game.play
when 1
  # puts "Do you want to be X or O?".green
  # token = gets.strip.upcase             broken i and i cant figure out why
  # comptoken = 'X' if token == 'O'
  # comptoken = 'O' if token == 'X'
  puts "Do you want to go first? Y/N".green
  order = gets.strip.downcase
  game = Game.new(Players::Human.new('O'), Players::Computer.new('X'), Board.new) if order == 'y'
  game = Game.new(Players::Computer.new('X'), Players::Human.new('O'), Board.new) if order == 'n'
  game.play

when 2
  game = Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new)
  game.play

end
end
start